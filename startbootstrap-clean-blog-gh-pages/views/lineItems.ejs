<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header');-%>
<body>
<%- include('layouts/navbar');-%>

<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Clean Blog</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <!-- <form action="/lineItem/new" methed="POST"> -->
            <% for(var i = 0; i < products.length; i++) { %>
                <div class="post-preview">
                    <h1 class="post-title">
                        <%= products[i].product.productName + " " + products[i].product.price%>,-
                    </h1>
                    <h4 class="post-subtitle">
                        Quantity: <%= products[i].qty%>
                    </h4>
                    <h4 class="post-subtitle">
                        Price for these products: <%= products[i].price%>,-
                    </h4>
                    <br>
                    <br>
                    <!-- <div>
                        <label class="post-">Quantity</label>
                        <input type="number" class="form-control" placeholder="How many do you want?" id="quantity" name="quantity">
                    </div> -->
                </div>
            <% } %>

            <!-- </form> -->
            <!-- Pager -->
            <br>

            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Order</a>
                <h2 class="post-title" style="float: right; margin-right: 10px">
                    Total price: <%= totalPrice%>,-
                </h2>
            </div>
        </div>
    </div>
</div>

<hr>
<%- include('layouts/footer');-%>
<%- include('layouts/scripts');-%>

</body>
</html>
